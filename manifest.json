{
    "manifest_version": 2,
    "name": "VisiPair",
    "version": "1.0",
  
    "description": "Adds a blue border to all webpages matching mozilla.org.",
  
    "icons": {
      "48": "icons/image.png"
    },
    "permissions": ["activeTab", "tabs", "webRequest", "<all_urls>"],

    "browser_action": {
    "default_icon": "icons/image.png",
    "default_title": "Test",
    "default_popup": "popup/index_popup.html"
  },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ],
    "background": {
    "scripts": ["background.js"]
    },
    "commands": {
"open-popup": {
"suggested_key": {
"default": "Ctrl+Shift+U",
"mac": "Command+Shift+U"
},
"description": "Open the Brutalist Mic UI popup"
}}
  }